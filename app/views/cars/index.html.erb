<table>
  <tr>
    <th>Fotka</th>
    <th>Car</th>
    <th>Price</th>
    <th>Year</th>
    <th>Contact name</th>
    <th></th>
  </tr>

<% @cars.each do |car| %>
  <tr>
    <td><%= image_tag car.photo.url(:thumb) %></td>
    <td><%= car.name %></td>
    <td class="price"><%= number_to_currency car.price, :unit => "â‚¬", :format => "%n %u" %></td>
    <td><%= car.year %></td>
    <td>
      <%= car.contact_name %><br/>
      <%= car.contact_phone %>
    </td>
    <td>
      <%= link_to 'Show', car %>
      <%= link_to 'Edit', edit_car_path(car) %>
      <%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>

